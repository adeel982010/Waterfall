                            <!--    <td class="text-left" style="margin-left:10px;padding: 2px;width:35%;border: 1px solid black;"><span t-field="o.product_id.product_tmpl_id.spare_part"/> </td>-->
                            <!--    <td class="text-center" style="padding: 2px;width:50%;border: 1px solid black;" colspan="2"/>-->
                            <!--</tr>-->
